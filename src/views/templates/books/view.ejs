<%- include('../../layouts/layoutStart.ejs', {title: title}) %>

<div class="container">
  <%- include('../../components/nav.ejs') %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src=<%- '/storage/' + book.fileCover %> class="img-fluid rounded-start">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Название: <%= book.title ? book.title : 'отсутсвует' %></h5>
          <p class="card-text">Описание: <%= book.description ? book.description : 'отсутсвует' %></p>
          <p class="card-text">Авторы: <%= book.authors ? book.authors : 'отсутсвует' %></p>
          <a class="btn btn-primary" href=<%- '/storage/' + book.fileBook %> download=<%- book.fileName %> >Скачать</a>
        </div>
      </div>
    </div>
  </div>

  <% if (messages.length) { %>
    <h3> Комментарии: </h3>
    <% books.forEach( ({autor, date, message}) => { %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"> <%= autor %> </h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= date %></h6>
        <p class="card-text"><%= message %></p>
      </div>
    </div>
  <% })} else { %>
    <p>Комментов пока нет</p>
  <% }%>

  <div class="row">
    <div class="col-4">
        <div class="form-group">
            <label for="username">username</label>
            <input
                    placeholder="username"
                    type="text"
                    id="username"
                    class="form-control"
            >
        </div>
        <div class="form-group">
            <label for="text">message</label>
            <textarea
                    placeholder="message"
                    class="form-control"
                    id="text"
            ></textarea>
        </div>
        <button type="submit" id="send" class="btn btn-primary">Send</button>
   </div>
  </div>

</div>


<script src="/socket.io/socket.io.js"></script>

<script>
  const socket = io.connect('/', {query: `bookId=${bookId}`}, (err) => {
    if (err) { console.log(err); }
    console.log('connect');
  });

  socket.on('comment', (msg) => {
    const div = getTmp(msg)
    boxList.insertAdjacentHTML('beforeend', div)
  });

  send.addEventListener('click', () => {
    socket.emit('comments', {
      username: inputUsername.value,
      text: inputText.value,
    })
  })
</script>

<%- include('../../layouts/layoutEnd.ejs') %>